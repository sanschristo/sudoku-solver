{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es2017",
    "lib": ["es2017", "DOM"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
